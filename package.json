{
  "name": "@astrale-os/workspace-config",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/astrale-os/config.git"
  },
  "scripts": {
    "preinstall": "node .check-workspace.cjs",
    "build": "pnpm -r run build",
    "clean": "pnpm -r run clean",
    "typecheck": "pnpm -r run typecheck",
    "lint": "pnpm exec eslint .",
    "lint:fix": "pnpm exec eslint . --fix",
    "format": "pnpm exec prettier --write .",
    "format:check": "pnpm exec prettier --check .",
    "test": "pnpm -r run test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "~9.39.2",
    "eslint": "~9.39.2",
    "eslint-config-prettier": "~10.1.8",
    "husky": "~9.1.7",
    "lint-staged": "~16.2.7",
    "prettier": "~3.8.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "~8.53.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
